{
  "info": {
    "name": "Bundle Products + Mock Payments",
    "_postman_id": "bundle-mock-payments-collection",
    "description": "Complete API collection for Bundle Products and Mock Payment Gateway features",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "bundle_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "transaction_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "order_id",
      "value": "order_test_123",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Bundle Products",
      "item": [
        {
          "name": "Create Bundle",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status is 201\", function() {",
                  "  pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test(\"Bundle ID is returned\", function() {",
                  "  const json = pm.response.json();",
                  "  pm.expect(json.id).to.exist;",
                  "  pm.environment.set(\"bundle_id\", json.id);",
                  "});",
                  "",
                  "pm.test(\"Pricing is calculated\", function() {",
                  "  const json = pm.response.json();",
                  "  pm.expect(json.pricing).to.exist;",
                  "  pm.expect(json.pricing.total).to.be.a('number');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Starter Pack\",\n  \"description\": \"Essential items to get started\",\n  \"items\": [\n    {\n      \"productId\": \"prod_123\",\n      \"productName\": \"Widget A\",\n      \"quantity\": 2,\n      \"unitPrice\": 19.99\n    },\n    {\n      \"productId\": \"prod_456\",\n      \"productName\": \"Widget B\",\n      \"quantity\": 1,\n      \"unitPrice\": 39.99\n    }\n  ],\n  \"discounts\": [\n    {\n      \"discountType\": \"percentage\",\n      \"discountValue\": 10,\n      \"priority\": 1\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/bundles",
              "host": ["{{base_url}}"],
              "path": ["api", "bundles"]
            }
          }
        },
        {
          "name": "List Bundles",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status is 200\", function() {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Returns bundles array\", function() {",
                  "  const json = pm.response.json();",
                  "  pm.expect(json.bundles).to.be.an('array');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/bundles?status=active",
              "host": ["{{base_url}}"],
              "path": ["api", "bundles"],
              "query": [
                {
                  "key": "status",
                  "value": "active"
                }
              ]
            }
          }
        },
        {
          "name": "Get Bundle Details",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status is 200\", function() {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Bundle has items\", function() {",
                  "  const json = pm.response.json();",
                  "  pm.expect(json.items).to.be.an('array');",
                  "  pm.expect(json.items.length).to.be.above(0);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/bundles/{{bundle_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "bundles", "{{bundle_id}}"]
            }
          }
        },
        {
          "name": "Calculate Bundle Price",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"quantity\": 3,\n  \"taxRate\": 0.08\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/bundles/{{bundle_id}}/calculate-price",
              "host": ["{{base_url}}"],
              "path": ["api", "bundles", "{{bundle_id}}", "calculate-price"]
            }
          }
        },
        {
          "name": "Generate Invoice",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"quantity\": 1,\n  \"taxRate\": 0.08\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/bundles/{{bundle_id}}/invoice",
              "host": ["{{base_url}}"],
              "path": ["api", "bundles", "{{bundle_id}}", "invoice"]
            }
          }
        },
        {
          "name": "Update Bundle",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Starter Pack\",\n  \"status\": \"active\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/bundles/{{bundle_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "bundles", "{{bundle_id}}"]
            }
          }
        },
        {
          "name": "Delete Bundle",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/bundles/{{bundle_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "bundles", "{{bundle_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Mock Payments - Success Flow",
      "item": [
        {
          "name": "Authorize Payment (Success)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status is 200\", function() {",
                  "  pm.response.to.have.status(200);",
                  "});",
