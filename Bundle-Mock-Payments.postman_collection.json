                  "",
                  "pm.test(\"Status is success\", function() {",
                  "  const json = pm.response.json();",
                  "  pm.expect(json.status).to.eql(\"success\");",
                  "  pm.expect(json.success).to.be.true;",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 69.11,\n  \"currency\": \"USD\",\n  \"payment_method\": {\n    \"card_number\": \"4242424242424242\",\n    \"exp_month\": \"12\",\n    \"exp_year\": \"2027\",\n    \"cvv\": \"123\"\n  },\n  \"orderId\": \"{{order_id}}\",\n  \"metadata\": {\n    \"customer_id\": \"cust_123\",\n    \"bundle_id\": \"{{bundle_id}}\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/payments/mock/authorize",
              "host": ["{{base_url}}"],
              "path": ["api", "payments", "mock", "authorize"]
