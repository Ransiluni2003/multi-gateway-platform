        },
        {
          "name": "Capture Payment",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status is 200\", function() {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Status is captured\", function() {",
                  "  const json = pm.response.json();",
                  "  pm.expect(json.status).to.eql(\"captured\");",
                  "});"
