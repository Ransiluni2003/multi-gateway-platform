# -------------------
# Server Configuration
# -------------------
NODE_ENV=development
PORT=5000
CORS_ORIGIN=http://localhost:3000
JWT_SECRET=your_jwt_secret_here_min_64_chars_long
JWT_EXPIRE=7d

# -------------------
# Database (MongoDB)
# -------------------
MONGO_INITDB_ROOT_USERNAME=root
MONGO_INITDB_ROOT_PASSWORD=your_mongo_root_password
MONGO_USER=your_mongo_user
MONGO_PASS=your_mongo_password
MONGO_DB_NAME=multi_gateway_db
MONGO_URI=mongodb+srv://your_user:your_password@your_cluster.mongodb.net/test?retryWrites=true&w=majority

# -------------------
# Admin Seeder
# -------------------
SEED_ADMIN_EMAIL=admin@example.com
SEED_ADMIN_PASSWORD=your_secure_password

# -------------------
# Stripe
# -------------------
STRIPE_SECRET_KEY=stripe_key_placeholder
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# -------------------
# PayPal
# -------------------
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_WEBHOOK_ID=we_your_webhook_id_here

# -------------------
# Supabase
# -------------------
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE=your_supabase_service_role_key_here
SUPABASE_BUCKET=uploads

# -------------------
# Monitoring / Logging
# -------------------
SENTRY_DSN=https://your_sentry_dsn_here
LOGTAIL_SOURCE_TOKEN=your_logtail_token_here

# -------------------
# Redis (Local setup)
# -------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

# -------------------
# Docker Service Ports (optional)
# -------------------
MONGO_PORT=27017
REDIS_LOCAL_PORT=6379

# Other
VERIFY_SIGNED_URL=true
LOGTAIL_SOURCE_TOKEN=
SENTRY_DSN=

# Mongo
MONGO_INITDB_ROOT_USERNAME=root
MONGO_INITDB_ROOT_PASSWORD=rootpassword
MONGO_INITDB_DATABASE=multi_gateway_db
